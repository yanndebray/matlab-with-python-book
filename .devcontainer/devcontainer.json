{
  "name": "MATLAB with Python",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "hostRequirements": {
      "cpus": 4
  },
  "features": {
      "ghcr.io/mathworks/devcontainer-features/matlab": {
          "release": "r2024b",
          "products": "MATLAB Simulink Simulink_Compiler Curve_Fitting_Toolbox Deep_Learning_Toolbox Image_Processing_Toolbox Statistics_and_Machine_Learning_Toolbox MATLAB_Compiler MATLAB_Compiler_SDK",
          "installJupyterMatlabProxy": true,
          "installMatlabEngineForPython": true
      },
      "ghcr.io/devcontainers/features/python": {
          "version": "os-provided",
          "installJupyterlab": true,
          "configureJupyterlabAllowOrigin": "*"
      }
  },
  "containerEnv": {
      "MATLAB_USERWORKDIR": "${containerWorkspaceFolder}",
      "MATLAB_USE_USERWORK": "1"
  }
}